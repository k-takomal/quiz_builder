<div class = "body-s">
  <div class = "sub-title"><%= @genre.name %>の クイズいちらん</div>
    <div class = "genre-index-area">
      <div class = "genre-index-header">クイズの数 
      <%= Question.where(genre_id: @genre.id).count %>問</div>
      <div class = "genre-index">タイトル と つくった人</div>

      <% @questions.each do |question|%>
        
        <div class = "genre-index"><%= link_to "・#{question.title}", question_comments_path(question.id), style:"width:fit-content;" %><br> <%= link_to "#{User.find(question.user_id).nickname}さん",user_path(question.user_id),style:"color:white;"%></div>
        
      <%end%>
        
        
    </div>
    <div class = "submits">
    
      <%=link_to "もどる",questions_path, class: "submit"%>
    </div>
</div>