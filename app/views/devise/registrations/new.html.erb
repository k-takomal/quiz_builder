<div class = "body-s">
<div class = "login-field">
<div class = "sign_in_area">
<h2 class = "sub-title">新規とうろく</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field">
  <label class="form-text">ニックネーム(４文字まで)</label>
    <%= f.text_field :nickname,autofocus: true , class: "login-form"%>
  </div>

  <div class="form-field">
    <label class="form-text">Eメール</label>
    <%= f.email_field :email, autocomplete: "email" , class: "login-form-l"%>
  </div>

  <div class="form-field">
    <label class="form-text">パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上にしてください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "login-form-l" %>
  </div>

  <div class="form-field">
    <label class="form-text">確認パスワード</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "login-form-l"%>
  </div>

<div class="actions">
  <%= f.submit "とうろく", class: "login_submits"%>
  <%= link_to 'もどる', root_path ,class: "login_submits"%>
  </div>
<% end %>

</div>
</div>

</div>