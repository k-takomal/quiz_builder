  <div class = "sub-title">ユーザークイズ
  セレクト</div>
    <div class = "genre-area">
      <div class = "select-genre-top">ユーザーさんを選んでください</div>

        <% @user.each do |user| %>
            <% if @question.where(user_id: user.id).count >= 5 %>
              <div class = "select-cell">
                  <div class="select-genre">
                    <%= link_to "#{user.nickname}さんのクイズ", user_select_user_joys_path(user.id),class:"select-genre-name",data: {"turbolinks" => false}%>
                
                    <%= link_to "#{@question.where(user_id: user.id).count}問の中からランダムで５問出題されます", select_joys_path(user.id),data: {"turbolinks" => false}, class: "select-genre"%>
                  </div>
              </div>
            <% else %>
              <div class = "no-select-cell" >
                <%= user.nickname%>さんのクイズ：
                <%=@question.where(user_id: user.id).count%>問しかないので選べません
                  <div class = "select-genre-caution">
                    (問題数が５問以上から遊べます)
                  </div>
              </div>
             <% end %>  
        <% end %>  
        
      <div class = "submits">
      <%=link_to "もどる",root_path, class: "submit"%>
      </div>
    </div>
    

